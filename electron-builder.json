{
  "appId": "com.systentando.loja-ui",
  "productName": "systentando-loja-ui",
  "protocols": {
    "name": "loja-ui",
    "schemes": [
      "loja-ui"
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "marcelio911",
      "repo": "systentando-loja-ui"
    }
  ],
  "asar": true,
  "win": {
    "target": "nsis",
    "icon": "resources/icons/logo@256.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "resources/icons/logo@512.png"
  },
  "nsis": {
    "oneClick": true,
    "artifactName": "${productName}-${version}.${ext}",
    "uninstallDisplayName": "${productName}",
    "createDesktopShortcut": "always"
  },
  "extraResources": [
    "./resources/**"
  ],
  "directories": {
    "output": "release/"
  },
  "files": [
    "out/**/*"
  ]
}
